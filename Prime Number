#include <iostream>
using namespace std;

int main()
{
    int n, flag = 0, i;
    cout << "enter the number to check: ";
    cin >> n;
    int m = n / 2;
    for (i = 2; i <= m; i++)
    {
        if (n % i == 0)
        {
            cout << "Number is not Prime." << endl;
            flag = 1;
            break;
        }
    }
    if (flag == 0)
        cout << "Number is prime" << endl;
    return 0;
}
